
<ApexChart TItem="Order"
           Title="@PointType.ToString()"
           Options=options>

    @if (PointType == PointType.Scatter)
    {
        <ApexPointSeries TItem="Order"
                     Items="orders"
                     Name="Gross Value"
                     SeriesType=PointType
                     XValue="@(e => e.DiscountPrecentage)"
                     YValue="@(e => e.GrossValue)"
                     OrderByDescending="e=>e.X" />

        <ApexPointSeries TItem="Order"
                     Items="orders"
                     SeriesType=PointType
                     Name="Net Value"
                     XValue="@(e => e.DiscountPrecentage)"
                     YValue="@(e => e.NetValue)"
                     OrderByDescending="e=>e.X" />
    }

    else if (PointType == PointType.RadialBar)
    {
        <ApexPointSeries TItem="Order"
                     Items="orders"
                     SeriesType=PointType
                     Name="Gross Value"
                     XValue="@(e => e.Country)"
                     YAggregate="@(e => decimal.Round(e.Average(e => e.DiscountPrecentage)))"
                     OrderByDescending="e=>e.Y" />


    }

    else if (IsXYChart())
    {
        <ApexPointSeries TItem="Order"
                     Items="orders"
                     Name="Gross Value"
                     SeriesType=PointType
                     XValue="@(e => e.Country)"
                     YAggregate="@(e => e.Sum(e => e.GrossValue))"
                     OrderByDescending="e=>e.Y" />

        <ApexPointSeries TItem="Order"
                     Items="orders"
                     SeriesType=PointType
                     Name="Net Value"
                     XValue="@(e => e.Country)"
                     YAggregate="@(e => e.Sum(e => e.NetValue))"
                     OrderByDescending="e=>e.Y" />
    }
    else
    {
        <ApexPointSeries TItem="Order"
                     Items="orders"
                     SeriesType=PointType
                     Name="Order Value"
                     XValue="@(e => e.OrderType)"
                     YAggregate="@(e => e.Sum(e => e.NetValue))" />
    }
</ApexChart>

